@model IEnumerable<StudentMathTestSystem.Models.Student>

@{
    ViewBag.Title = "Students List";
}

<div class="bg-white p-4 shadow-sm rounded">
    <h2 class="text-center text-primary mb-4">Students</h2>

    <table class="table table-striped">
        <thead class="table-light">
            <tr>
                <th>Student ID</th>
                <th>Exam ID</th>
                <th>Task ID</th>
                <th>Task</th>
                <th>Correct Result</th>
                <th>Student Result</th>
                <th>Correct</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                foreach (var exam in student.Exams)
                {
                    foreach (var task in exam.Tasks)
                    {
                        <tr>
                            <td>@student.StudentID</td>
                            <td>@exam.ExamID</td>
                            <td>@task.ExamTaskID</td>
                            <td>@task.Expression</td>
                            <td>@task.ExpectedResult</td>
                            <td>@task.StudentResult</td>
                            <td>
                                <span class="badge @(task.IsCorrect ? "bg-success" : "bg-danger")">
                                    @(task.IsCorrect ? "Yes" : "No")
                                </span>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
